<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="962.0" prefWidth="1025.0" style="-fx-background-color: #2b3e2b;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.l3.logparser.controller.MessageExtractorController">
    <center>
        <SplitPane dividerPositions="0.4" orientation="VERTICAL">
            <items>
                <VBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Log Directory and Flight Criteria" />
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label minWidth="120.0" text="Log Directory :" />
                                        <TextField fx:id="logDirectoryField" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="browseButton" minWidth="90.0" onAction="#onBrowseLogDirectory" styleClass="browseButton" stylesheets="@log-parser-styles.css" text="Browse...">
                                 <tooltip>
                                    <Tooltip text="Only .txt files are valid" />
                                 </tooltip></Button>
                                        <ToggleButton fx:id="multiNodeToggleButton" minWidth="90.0" onAction="#onMultiNodeToggle" styleClass="browseButton" stylesheets="@log-parser-styles.css" text="Multi-node ON">
                                 <tooltip>
                                    <Tooltip text="Enable to process n1, n2, n3 folders" />
                                 </tooltip></ToggleButton>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label minWidth="120.0" text="Flight Number : " />
                                        <TextField fx:id="flightNumberField" prefWidth="150.0" />
                                        <Label minWidth="120.0" text="Departure Date:" />
                                        <DatePicker fx:id="departureDatePicker" prefWidth="150.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label minWidth="120.0" text="Departure Airport : " />
                                        <TextField fx:id="departureAirportField" prefWidth="150.0" />
                                        <Label minWidth="120.0" text="Arrival Airport:" />
                                        <TextField fx:id="arrivalAirportField" prefWidth="150.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label minWidth="120.0" text="Data Type : " />
                                        <ComboBox fx:id="dataTypeComboBox" prefWidth="150.0" stylesheets="@log-parser-styles.css" />
                                      <Label minWidth="120.0" text="Debug Mode:" />
                                      <ToggleButton fx:id="debugToggleButton" onAction="#onDebugToggle" prefWidth="150.0" stylesheets="@log-parser-styles.css" text="OFF">
                                 <tooltip>
                                    <Tooltip text="Keep OFF untill suggested by L3 Devs" />
                                 </tooltip></ToggleButton>
                                        <Region HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label minWidth="120.0" text="Output Directory:" />
                                        <TextField fx:id="outputDirectoryField" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="browseOutputButton" minWidth="90.0" onAction="#onBrowseOutputDirectory" styleClass="browseButton" stylesheets="@log-parser-styles.css" text="Browse..." />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <Separator />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button fx:id="processButton" minWidth="95.0" onAction="#onProcessLogs" stylesheets="@log-parser-styles.css" text="Process Logs" />
                                <Button fx:id="saveButton" minWidth="95.0" onAction="#onSaveExtracted" stylesheets="@log-parser-styles.css" text="Save Extracted" />
                                <Button fx:id="clearButton" minWidth="95.0" onAction="#onClearAll" stylesheets="@log-parser-styles.css" text="Clear All" />
                                <Region HBox.hgrow="ALWAYS" />
                                <ProgressBar fx:id="progressBar" prefWidth="200.0" />
                                <Label fx:id="statusLabel" text="Ready" />
                            </children>
                        </HBox>
                        <Label fx:id="summaryLabel" style="-fx-font-weight: bold;" />
                        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="partColumn" prefWidth="60.0" text="Part" />
                                <TableColumn fx:id="flightColumn" prefWidth="100.0" text="Flight" />
                                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date Time" />
                                <TableColumn fx:id="departureColumn" prefWidth="80.0" text="From" />
                                <TableColumn fx:id="arrivalColumn" prefWidth="80.0" text="To" />
                                <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                                <TableColumn fx:id="indicatorColumn" prefWidth="60.0" text="Ind." />
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
                <SplitPane dividerPositions="0.3" orientation="HORIZONTAL">
                    <items>
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Processing Log" />
                                <TextArea fx:id="logArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Message Preview" />
                                <TextArea fx:id="messagePreviewArea" editable="false" style="-fx-font-family: 'Courier New', monospace;" wrapText="true" VBox.vgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                            </padding>
                        </VBox>
                    </items>
                </SplitPane>
            </items>
        </SplitPane>
    </center>
    <top>
        <HBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="56.0" prefWidth="1026.0" spacing="15.0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <ImageView fitHeight="31.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../../images/idhmYHKKeL_1759401346656.jpeg" />
                    </image>
                </ImageView>
            <VBox nodeOrientation="LEFT_TO_RIGHT" spacing="2.0">
               <children>
                  <Label styleClass="header-label" text="Log Parser Module" textFill="WHITE" />
                  <Label style="-fx-text-fill: rgba(255, 255, 255, 0.7); -fx-font-size: 12px;" text="Extract flight Input / Output parts" />
               </children>
            </VBox>
            </children>
         <padding>
            <Insets bottom="12.0" left="16.0" right="16.0" top="12.0" />
         </padding>
        </HBox>
    </top>
</BorderPane>
