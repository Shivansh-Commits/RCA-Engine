<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="962.0" prefWidth="1025.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.l3.logparser.controller.MessageExtractorController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="L3 Engine - Message Extractor Module" />
            <Separator />
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.4" orientation="VERTICAL">
         <items>
            <VBox spacing="10.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Log Directory and Flight Criteria" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="120.0" text="Log Directory:" />
                              <TextField fx:id="logDirectoryField" HBox.hgrow="ALWAYS" />
                              <Button fx:id="browseButton" onAction="#onBrowseLogDirectory" text="Browse..." />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="120.0" text="Flight Number:" />
                              <TextField fx:id="flightNumberField" prefWidth="150.0" />
                              <Label minWidth="120.0" text="Departure Date:" />
                              <TextField fx:id="departureDateField" prefWidth="150.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="120.0" text="Departure Airport:" />
                              <TextField fx:id="departureAirportField" prefWidth="150.0" />
                              <Label minWidth="120.0" text="Arrival Airport:" />
                              <TextField fx:id="arrivalAirportField" prefWidth="150.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="120.0" text="Data Type:" />
                              <ComboBox fx:id="dataTypeComboBox" prefWidth="150.0" />
                              <Region HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label minWidth="120.0" text="Output Directory:" />
                              <TextField fx:id="outputDirectoryField" HBox.hgrow="ALWAYS" />
                              <Button fx:id="browseOutputButton" onAction="#onBrowseOutputDirectory" text="Browse..." />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <Separator />
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Button fx:id="processButton" onAction="#onProcessLogs" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Process Logs" />
                        <Button fx:id="clearButton" onAction="#onClearAll" text="Clear All" />
                        <Button fx:id="saveButton" onAction="#onSaveExtracted" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Save Extracted" />
                        <Region HBox.hgrow="ALWAYS" />
                        <ProgressBar fx:id="progressBar" prefWidth="200.0" />
                        <Label fx:id="statusLabel" text="Ready" />
                     </children>
                  </HBox>
                  <Label fx:id="summaryLabel" style="-fx-font-weight: bold;" />
                  <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="partColumn" prefWidth="60.0" text="Part" />
                        <TableColumn fx:id="flightColumn" prefWidth="100.0" text="Flight" />
                        <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date Time" />
                        <TableColumn fx:id="departureColumn" prefWidth="80.0" text="From" />
                        <TableColumn fx:id="arrivalColumn" prefWidth="80.0" text="To" />
                        <TableColumn fx:id="typeColumn" prefWidth="100.0" text="Type" />
                        <TableColumn fx:id="indicatorColumn" prefWidth="60.0" text="Ind." />
                     </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <SplitPane dividerPositions="0.3" orientation="HORIZONTAL">
               <items>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Processing Log" />
                        <TextArea fx:id="logArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Message Preview" />
                        <TextArea fx:id="messagePreviewArea" editable="false" style="-fx-font-family: 'Courier New', monospace;" wrapText="true" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                     </padding>
                  </VBox>
               </items>
            </SplitPane>
         </items>
      </SplitPane>
   </center>
</BorderPane>
